{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "removeComments": true,
    "declaration": false,
    "noEmit": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["src"],
  "exclude": ["**/node_modules", "dist"]
}
