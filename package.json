{
  "name": "next-roots",
  "version": "2.2.2",
  "description": "Next.js utility to generate internationalized pages with metadata according to custom roots rules.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "console.d.ts",
    "console.js",
    "context.d.ts",
    "context.js",
    "link.d.ts",
    "link.js",
    "meta.d.ts",
    "meta.js",
    "index.d.ts",
    "index.js"
  ],
  "bin": {
    "next-roots": "./dist/bin/builder.js"
  },
  "scripts": {
    "prepublish": "yarn clean && yarn build && yarn test",
    "build": "rollup -c",
    "clean": "rm -rf dist > /dev/null",
    "format": "pretty-quick",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "publish:canary": "yarn publish --tag canary"
  },
  "dependencies": {},
  "devDependencies": {
    "@testing-library/react": "^11.0.2",
    "@testing-library/react-hooks": "^3.3.0",
    "@types/jest": "^26.0.3",
    "@types/react": "^16.9.41",
    "colors": "^1.4.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "next": "^9.4.4",
    "prettier": "^2.0.5",
    "pretty-quick": "^3.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rollup": "^2.18.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^1.2.24",
    "ts-jest": "^26.1.0",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "next": "^9.4.4",
    "react": "^16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn test"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "roots": [
      "<rootDir>/__tests__",
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "license": "MIT",
  "keywords": [
    "react",
    "next",
    "nextjs",
    "next.js",
    "roots",
    "routes",
    "localization",
    "localized",
    "locale",
    "static"
  ],
  "author": {
    "name": "Jirka Svoboda",
    "email": "svobik7@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/svobik7/next-roots"
  }
}
