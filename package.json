{
  "name": "next-roots",
  "version": "5.0.0-canary.0",
  "description": "Utility to handle internationalized routing for Next.js app folder.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "index.d.ts",
    "index.js",
    "mock.js"
  ],
  "exports": {
    ".": {
      "next-roots-mock": "./mock.js",
      "default": "./index.js"
    }
  },
  "bin": {
    "next-roots": "dist/cli.js"
  },
  "scripts": {
    "prepare": "husky",
    "clean": "rm -rf dist || true",
    "build": "pnpm clean && pnpm typecheck && pnpm test && node esbuild.mjs && pnpm build:types && pnpm lint",
    "build:types": "pnpm dts-bundle-generator --config ./dts.config.js",
    "build:no-test": "node esbuild.mjs",
    "build:coverage": "pnpm clean && pnpm typecheck && pnpm test && node esbuild.mjs",
    "lint": "eslint . --max-warnings 0",
    "lint-fix": "eslint . --fix --max-warnings 0",
    "test": "vitest --no-watch",
    "test:watch": "vitest",
    "test:coverage": "pnpm vitest --no-watch --coverage",
    "typecheck": "pnpm tsc --noEmit",
    "prepublish": "pnpm build",
    "publish:canary": "pnpm publish --tag canary",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "esbuild": "^0.27.2",
    "esbuild-node-externals": "^1.20.1",
    "node-watch": "^0.7.4",
    "parse-typed-args": "^0.2.0",
    "path-to-regexp": "^8.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@eslint/eslintrc": "^3.0.2",
    "@eslint/compat": "^2.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/coverage-istanbul": "^4.0.17",
    "arg": "^5.0.2",
    "colors": "^1.4.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.3.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^17.0.0",
    "happy-dom": "^20.3.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "semantic-release": "^25.0.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.17"
  },
  "license": "MIT",
  "keywords": [
    "next.js",
    "i18n",
    "routes",
    "locale",
    "internationalization",
    "localization",
    "localized",
    "react",
    "next",
    "nextjs",
    "server components"
  ],
  "author": {
    "name": "Jirka Svoboda",
    "email": "svobik7@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/svobik7/next-roots.git"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --quiet"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316",
  "resolutions": {
    "vite": "7.1.11"
  },
  "patchedDependencies": {
    "dts-bundle-generator": "patches/dts-bundle-generator.patch"
  }
}
